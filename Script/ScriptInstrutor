// Vari√°vel global para armazenar a lista completa de instrutores
let todosInstrutores = [];

/**
 * Fun√ß√£o para renderizar a tabela com uma lista de instrutores
 * @param {Array} instrutores - A lista de instrutores a ser mostrada
 */
function renderizarTabela(instrutores) {
  const tbody = document.querySelector(".table-container table tbody");
  tbody.innerHTML = ""; // Limpa a tabela

  if (instrutores.length === 0) {
    tbody.innerHTML =
      '<tr><td colspan="4" class="text-center">Nenhum instrutor encontrado.</td></tr>';
    return;
  }

  instrutores.forEach((instrutor) => {
    // O modelo Instrutor.java n√£o tem "status". Vamos simular.
    const statusHtml = '<span class="status-ativo">Ativo</span>';

    const newRow = `
      <tr>
        <td>${instrutor.nome}</td>
        <td>${instrutor.cpf}</td>
        <td>${statusHtml}</td>
        <td>
          <label class="switch">
            <input type="checkbox" checked>
            <span class="slider"></span>
          </label>
          <i class="bi bi-pencil action-icon" data-instrutor-id="${instrutor.id}" title="Editar"></i>
        </td>
      </tr>
    `;
    tbody.innerHTML += newRow;
  });
}

/**
 * Fun√ß√£o principal para carregar os instrutores da API
 */
async function carregarInstrutores() {
  const token = localStorage.getItem("jwtToken");
  if (!token) {
    alert("Sess√£o expirada. Fa√ßa o login novamente.");
    window.location.href = "Index.html";
    return;
  }

  try {
    const response = await fetch("http://localhost:8080/instrutor/listar", {
      method: "GET",
      headers: {
        Authorization: `Bearer ${token}`,
      },
    });

    if (response.ok) {
      const instrutores = await response.json();
      todosInstrutores = instrutores; // Salva na lista global
      renderizarTabela(todosInstrutores); // Renderiza a tabela
    } else if (response.status === 403) {
      alert("Sua sess√£o expirou ou voc√™ n√£o tem permiss√£o. Fa√ßa o login novamente.");
      window.location.href = "Index.html";
    } else {
      alert("Erro ao carregar instrutores. C√≥digo: " + response.status);
    }
  } catch (error) {
    console.error("Erro de rede:", error);
    alert("N√£o foi poss√≠vel conectar √† API para listar os instrutores.");
  }
}

// --- Ponto de Entrada: O DOM foi carregado ---
document.addEventListener("DOMContentLoaded", function () {
  
  // 1. Carrega o nome do usu√°rio
  const nomeUsuario = localStorage.getItem("usuarioLogado") || "Usu√°rio";
  document.getElementById("userName").textContent = nomeUsuario;

  // 2. Carrega a lista de instrutores da API
  carregarInstrutores();

  // 3. Adiciona a l√≥gica da BARRA DE BUSCA
  const searchInput = document.querySelector(".search-input");
  searchInput.addEventListener("input", function (e) {
    const termoBusca = e.target.value.toLowerCase();
    
    // Filtra a lista 'todosInstrutores'
    const instrutoresFiltrados = todosInstrutores.filter(instrutor => 
      instrutor.nome.toLowerCase().includes(termoBusca) ||
      instrutor.cpf.includes(termoBusca)
    );
    
    // Renderiza a tabela apenas com os instrutores filtrados
    renderizarTabela(instrutoresFiltrados);
  });

  // 4. L√≥gica de navega√ß√£o (Menu)
  document.querySelectorAll(".nav-menu li").forEach(item => {
    item.addEventListener("click", function(event) {
        const pagina = event.currentTarget.dataset.page; 
        if (pagina) {
            window.location.href = pagina;
        }
    });
  });

  // 5. Bot√£o de sair (Logout)
  document
    .querySelector(".bi-box-arrow-right")
    .addEventListener("click", function () {
      if (confirm("Deseja sair do sistema?")) {
        localStorage.removeItem("usuarioLogado");
        localStorage.removeItem("jwtToken");
        localStorage.removeItem("instrutorId");
        window.location.href = "Index.html";
      }
    });

  // 6. Bot√£o Cadastrar Instrutor
  document.getElementById("btCadastrarInstrutor").addEventListener("click", function () {
    // O HTML j√° tem: onclick="window.location.href='cadastro-instrutor.html'"
    // Mas vamos garantir que o nome do arquivo esteja correto.
    // O seu HTML <head> linka para "Style/StyleCadastroInstrutor.css"
    // E o seu form action √© "Script/ScriptCadastroInstrutor"
    // Mas o arquivo HTML √© "CadastroInstrutor.html"
    window.location.href = "CadastroInstrutor.html";
  });

  // 7. L√≥gica de edi√ß√£o (listener delegado)
  document.querySelector("tbody").addEventListener("click", function(e) {
    if (e.target && e.target.classList.contains('action-icon')) {
      const instrutorId = e.target.getAttribute('data-instrutor-id');
      
      // üëá **** ESTA √â A MUDAN√áA ****
      // Remove o alert() e redireciona para a tela de cadastro
      window.location.href = `CadastroInstrutor.html?id=${instrutorId}`;
    }
  });

});